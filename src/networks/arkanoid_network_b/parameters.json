{
    "experience_buffer_size"    : 1024,
    "gamma"                     : 0.99,
    "normalise"                 : false,

  "network_architecture":
  {
        "network_log_file_name" : "networks/arkanoid_network_b/network.log",

        "input_geometry"     : [16, 20, 3],
        "output_geometry"    : [1, 1, 3],

        "hyperparameters" :
        {
          "init_weight_range" : 0.0,
          "learning_rate"     : 0.0005,
          "lambda1"           : 0.0000001,
          "lambda2"           : 0.0000001,
          "dropout"           : 0.02,

          "minibatch_size"    : 32
        },

        "layers"         :
        [
            {
                "type"      : "convolution",
                "geometry"  : [3, 3, 16]
            },
            {
                "type"      : "relu"
            },
            {
                "type"      : "convolution",
                "geometry"  : [3, 3, 32]
            },
            {
                "type"      : "relu"
            },



            {
                "type"      : "dropout"
            },
            {
                "type"      : "output"
            }

        ]
  }
}
