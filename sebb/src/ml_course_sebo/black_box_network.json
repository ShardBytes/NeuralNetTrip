{
  "experience_buffer_size"        : 256,
  "gamma"               : 0.9,

  "network_architecture":
  {
        "network_log_file_name" : "black_box_network.log",

        "input_geometry"     : [8, 8, 2],
        "output_geometry"    : [1, 1, 4],

        "hyperparameters" :
        {
          "init_weight_range" : 0.0,
          "learning_rate"     : 0.001,
          "lambda1"           : 0.000001,
          "lambda2"           : 0.000001,
          "dropout"           : 0.02,

          "minibatch_size"    : 32
        },

        "layers"         :
        [
            {
                "type"      : "fc",
                "geometry"  : [1, 1, 16]
            },
            {
                "type"      : "relu"
            },

            {
                "type"      : "dropout"
            },

            {
                "type"      : "convolution",
                "geometry"  : [1, 1, 32]
            },
            {
                "type"      : "relu"
            },

            {
                "type"      : "fc",
                "geometry"  : [1, 1, 8]
            },
            {
                "type"      : "relu"
            },


            {
                "type"      : "output"
            }

        ]
  }
}
